@model ProductAddViewModel
@{
    ViewBag.Title = "Title";
    Layout = "_AdminLayout";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Ürün Ekle</h3>

                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Product.ProductName">Ürün Adı</label>
                            <input type="text" asp-for="Product.ProductName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.CategoryId">Kategori</label>
                            <select asp-for="Product.CategoryId" class="form-control custom-select" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>


                        </div>
                        <div class="form-group">
                            <label asp-for="Product.ProductDetail">Ürün Detayı</label>
                            <textarea asp-for="Product.ProductDetail" id="summernote" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Product.Price">Fiyat</label>
                            <input type="text" asp-for="Product.Price" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Product.Stock">Stok Miktarı</label>
                            <input type="text" asp-for="Product.Stock" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Product.ImagePath">Ürün Görseli</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="files">
                                    <label class="custom-file-label">Görsel Seç</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-12">
                    <input type="submit" value="Ürünü Ekle" class="btn btn-success btn-block">
                </div>
            </div>
        </form>
    </div>

</section>
<!-- /.content -->
@section summernote{
    <script src="~/admintemplate/plugins/summernote/summernote-bs4.min.js"></script>
}