@model CategoryUpdateViewModel
@{
    ViewBag.Title = "Title";
    Layout = "_AdminLayout";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Güncelle</h3>

                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Category.CategoryName">Kategori Adı</label>
                            <input type="text" asp-for="Category.CategoryName" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Category.Description">Açıklama</label>
                            <textarea asp-for="Category.Description" id="summernote" class="form-control" rows="4"></textarea>
                        </div>

                        
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="row">
                <div class="col-12">
                    <input type="submit" value="Ürünü Ekle" class="btn btn-success btn-block">
                </div>
            </div>

        </form>
    </div>

</section>
<!-- /.content -->
@section summernote{
    <script src="~/admintemplate/plugins/summernote/summernote-bs4.min.js"></script>
}