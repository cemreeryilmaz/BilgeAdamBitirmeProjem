@model CategoryListViewModel
@{
    ViewBag.Title = "Title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <a asp-controller="Category" asp-action="Add" class="btn btn-primary">Yeni Kategori Ekle</a>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürünler Listesi</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.CategoryName</td>
                                <td>@category.Description</td>
                                <td>

                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Güncelle</a>

                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Sil</a>

                                </td>
                                


                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<!-- Page specific script -->
@section TabloScript{
    <script>
        $(function () {
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}